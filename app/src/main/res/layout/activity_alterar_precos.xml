<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fundo_telas2"
        android:contentDescription="Fundo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="70dp"
            android:gravity="center_horizontal">

            <TextView
                android:text="Alterar Preços"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Campos de preço -->
            <EditText
                android:id="@+id/etPrecoCabelo"
                android:hint="Preço Cabelo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:background="@android:color/white"
                android:layout_marginBottom="16dp"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etPrecoBarba"
                android:hint="Preço Barba"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:background="@android:color/white"
                android:layout_marginBottom="16dp"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etPrecoCabeloBarba"
                android:hint="Preço Cabelo e Barba"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:background="@android:color/white"
                android:layout_marginBottom="24dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="290dp"
                android:layout_height="54dp"
                android:text="Salvar Preços"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnResetPadrao"
                android:layout_width="290dp"
                android:layout_height="54dp"
                android:text="Restaurar Preços Padrão"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:layout_marginTop="12dp" />


        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        android:contentDescription="Voltar"
        android:layout_gravity="top|start"
        app:tint="#FFFFFF" />



</FrameLayout>
