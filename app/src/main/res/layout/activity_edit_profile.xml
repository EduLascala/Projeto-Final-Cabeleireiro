<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagem de fundo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fundo_telas2"
        android:contentDescription="Fundo" />

    <!-- Conteúdo principal com scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="48dp">

            <TextView
                android:text="Meu Perfil"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Usuário"
                android:textColor="#FFFFFF"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="#CCCCCC"
                android:background="@android:color/darker_gray"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:text="Email"
                android:textColor="#FFFFFF"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="#CCCCCC"
                android:background="@android:color/darker_gray"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:text="Nome Completo"
                android:textColor="#FFFFFF"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="text|textNoSuggestions|textVisiblePassword"
                android:importantForAutofill="no"
                android:privateImeOptions="nm"
                android:autofillHints=""
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:text="Nova Senha"
                android:textColor="#FFFFFF"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:text="Confirmar Nova Senha"
                android:textColor="#FFFFFF"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/etConfirmNewPassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginBottom="24dp"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal" />


            <Button
                android:id="@+id/btnSave"
                android:layout_width="290dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:text="Salvar Alterações"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:padding="14dp" />


        </LinearLayout>
    </ScrollView>

    <!-- Botão Voltar no topo esquerdo -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        android:contentDescription="Voltar"
        android:layout_gravity="top|start"
        app:tint="#FFFFFF" />
</FrameLayout>
