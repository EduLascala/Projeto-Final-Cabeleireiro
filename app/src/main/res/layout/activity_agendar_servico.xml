<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagem de fundo preenchendo toda a tela -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fundo_telas2"
        android:contentDescription="Fundo" />

    <!-- Conteúdo principal com scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Botão voltar -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Voltar"
                android:layout_marginBottom="24dp"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agendar Serviço"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecione o serviço"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />

            <Spinner
                android:id="@+id/spinnerServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Selecionada"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDataSelecionada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:text="Nenhuma data selecionada" />

            <Button
                android:id="@+id/btnSelecionarData"
                android:layout_width="290dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:text="Selecionar Data"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora Selecionada"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvHoraSelecionada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:text="Nenhuma hora selecionada" />

            <Button
                android:id="@+id/btnSelecionarHora"
                android:layout_width="290dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:text="Selecionar Hora"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/btnConfirmar"
                android:layout_width="290dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:text="Confirmar Agendamento"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:padding="14dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
