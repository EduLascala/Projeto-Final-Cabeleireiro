<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- Imagem de fundo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fundo_telas2"
        android:contentDescription="Fundo" />



    <!-- Conteúdo principal com scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="100dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="198dp"
                android:layout_height="202dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.112"
                app:srcCompat="@drawable/logo_app1" />

            <TextView
                android:text="Painel do Administrador"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnVerAgendamentos"
                android:layout_width="290dp"
                android:layout_height="54dp"
                android:text="Ver Agendamentos"
                android:textAllCaps="false"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnAlterarPrecos"
                android:layout_width="290dp"
                android:layout_height="54dp"
                android:text="Alterar Preços"
                android:textAllCaps="false"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Botão Voltar no topo esquerdo -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        android:contentDescription="Voltar"
        android:layout_gravity="top|start"
        app:tint="#FFFFFF" />
</FrameLayout>
